<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--<style name="Theme.Abdarkholo" parent="@android:style/Theme.Holo">-->
    <style name="Theme.AppCompat" parent="Theme.AppCompat.Appcompat">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_abdarkholo</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Abdarkholo</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Abdarkholo</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Abdarkholo</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Abdarkholo</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Abdarkholo</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_abdarkholo</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_abdarkholo</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Abdarkholo</item>
    </style>

    <style name="ActionBar.Solid.Abdarkholo" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_abdarkholo</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_abdarkholo</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_abdarkholo</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Abdarkholo</item>
    </style>

    <style name="ActionBar.Transparent.Abdarkholo" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_abdarkholo</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Abdarkholo</item>
    </style>

    <style name="PopupMenu.Abdarkholo" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_abdarkholo</item>
    </style>

    <style name="DropDownListView.Abdarkholo" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_abdarkholo</item>
    </style>

    <style name="ActionBarTabStyle.Abdarkholo" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_abdarkholo</item>
    </style>

    <style name="DropDownNav.Abdarkholo" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_abdarkholo</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_abdarkholo</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_abdarkholo</item>
    </style>

    <style name="ProgressBar.Abdarkholo" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_abdarkholo</item>
    </style>

    <style name="ActionButton.CloseMode.Abdarkholo" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_abdarkholo</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Abdarkholo.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Abdarkholo</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Abdarkholo</item>
    </style>

</resources>